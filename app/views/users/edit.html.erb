<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-10 mt-1 mb-1">

            <% if @user.errors.any? %>
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <h4 class="alert-heading">The following errors prevented the <%= @user.class.name.downcase %> from being saved</h4>
                    <ul>
                    <% @user.errors.full_messages.each do |msg| %>
                        <li><%= msg %></li>
                    <% end %>
                    </ul>
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            <% end %>

            <%= form_with(model: @user, class: "shadow p-3 mb-3 bg-white rounded", local: true) do |f| %>
                <h1 class="text-center text-info">Edit your profile</h1>

                <div class="form-group row">
                    <%= f.label :username, class: "col-2 col-form-label text-info ml-4 pl-4" %>
                    <%= f.text_field :username, class: "form-control shadow rounded ml-5 mr-5", placeholder: "Enter a username" %>
                </div>

                <div class="form-group row">
                    <%= f.label :email, class: "col-2 col-form-label text-info ml-4 pl-4" %>
                    <%= f.email_field :email, class: "form-control shadow rounded ml-5 mr-5", placeholder: "Enter your e-mail address" %>
                    <small id="emailHelp" class="form-text text-muted ml-4 pl-4">We'll never share your email with anyone else.</small>
                </div>
                    
                <div class="form-group row">
                    <%= f.label :password, class: "col-2 col-form-label text-info ml-4 pl-4" %>
                    <%= f.password_field :password, class: "form-control shadow rounded ml-5 mr-5", placeholder: "Choose a password" %>
                </div>

                <div class="form-group row justify-content-center">
                    <%= f.submit(@user.new_record? ? "Sign up" : "Update account", class: "btn btn-outline-info btn-lg") %>
                </div>

            <% end %>
            </div>
            <div class="mb-3">
                <%= link_to '[ Cancel and return to catalog ]', index_path, class: "text-info" %>
            </div>
        </div>
    </div>
</div> 