<div class="container mt-4 bg-white border border-info">
  <div class="row justify-content-center">
    <div class="col-10 mt-1 mb-1">
      <h2 class="text-center text-info mt-4"><%= @user.username %>'s profile</h2>


      <h6 class="text-center mt-4"> Username: <%= @user.username %></h6>

      <h6 class="text-center mt-4"> E-mail: <%= @user.email %></h6>

      <div class="text-center mt-4 mb-4">
        <%= link_to "Edit your profile", edit_user_path(@user), class: "btn btn-outline-info" %>
      </div>
    </div>
  </div>
</div> 

<div class="container mt-4 mb-4 bg-transparent">
  <div class="row justify-content-left">
    <div class="col-12 mt-1 mb-1 border border-info">
      <h3 class="text-info mt-4" >Orders</h3>
      <% @user = User.find(params[:id]) %>
        <p class="text-left ml-1 pt-3"><b><%= pluralize(@user.place_orders.count, "order") %></b> to be processed</p>
        <div class="table-responsive">
          <table class = "table table-hover">
            <thead>
              <tr class="text-info">
                <th scope="col">Name</th>
                <th scope="col">Address</th>
                <th scope="col">E-mail</th>
                <th scope="col">Payment Method</th>
                <th scope="col">Created at</th>
                <th scope="col">Created by</th>
              </tr>
            </thead>

            <tbody>
              <% @place_orders.each do |place_order| %>
                <tr scope="row">
                  <td><%= place_order.name %></td>
                  <td><%= place_order.address %></td>
                  <td><%= place_order.email %></td>
                  <td><%= place_order.pay_type %></td>
                  <td><%= place_order.created_at.strftime("%d/%m/%y %H:%M:%S") %></td>
                  <td><%= place_order.user.username if place_order.user %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        <br/>
      
    </div>
  </div>
</div> 


