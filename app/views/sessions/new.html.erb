<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-10 mt-1 mb-1">
            <%= form_with(scope: :session, url: login_path, class: "shadow p-3 mb-3 bg-white  rounded", local: true) do |f| %>
                <h1 class="text-center text-info">Log in</h1>

                <div class="form-group row">
                    <%= f.label :email, class: "col-2 col-form-label text-info ml-4 pl-4" %>
                    <%= f.email_field :email, class: "form-control shadow rounded ml-5 mr-5", placeholder: "Enter your email address" %>
                    <small id="emailHelp" class="form-text text-muted ml-4 pl-4">We'll never share your email with anyone else.</small>
                </div>
                    
                <div class="form-group row">
                    <%= f.label :password, class: "col-2 col-form-label text-info ml-4 pl-4" %>
                    <%= f.password_field :password, class: "form-control shadow rounded ml-5 mr-5", placeholder: "Enter your password" %>
                </div>

                <div class="form-group row justify-content-center">
                    <%= f.submit "Log in", class: "btn btn-outline-info btn-lg" %>
                </div>
                
            <% end %>
        </div>
        <div class="mb-2">
            <%= link_to '[ Cancel and return to catalog ]', index_path, class: "text-info" %>
        </div>
        <div class="mb-2">
            <%= link_to '[ Click here to create an account if you do not have one yet ]', signup_path, class: "text-info" %>
        </div>
    </div>
</div>  