<p id="notice"><%= notice %></p>

<h1>Marilu's Catalog</h1>

<% cache @products do %>
    <% @products.each do |product| %>
        <% cache product do %>
            <div class="entry">
                <%= image_tag(product.image_url, size:90) %>
                <h3><%= product.title %></h3>
                <p>
                    <%= sanitize(product.description) %>
                </p>
                <div class="price_line">
                    <span class="price"><%= number_to_currency(product.price, :unit => "â‚¬", :separator => ".", :delimiter => ",") %></span>
                    <%= button_to 'Add to Cart', line_items_path(product_id: product) %>
                </div>
            </div>
        <% end %>
    <% end %>
<% end %>